<Window x:Class="SnakesAndLadders.GameLauncher.Launcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesAndLadders.GameLauncher"
        mc:Ignorable="d"
        Title="Launcher" Height="450" Width="500">
    <Grid Background="Gray">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Змеи и лестницы" Width="270" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25"/>
        <Button Name="Play" Content="Играть" Grid.Row="1" Style="{StaticResource ButtonLauncher}"  Click="Play_Click"/>
        <Button Name="HowToPlay" Content="Как играть" Grid.Row="2" Style="{StaticResource ButtonLauncher}"  Click="HowToPlay_Click"/>
        <Button Name="Settings" Content="Настройки" Grid.Row="3" Style="{StaticResource ButtonLauncher}"  Click="Settings_Click"/>
        <Button Name="Exit" Content="Выйти" Grid.Row="4" Style="{StaticResource ButtonLauncher}"  Click="Exit_Click"/>
        
    </Grid>
</Window>
