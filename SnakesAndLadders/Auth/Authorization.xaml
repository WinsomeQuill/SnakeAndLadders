<Window x:Class="SnakesAndLadders.Auth.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesAndLadders.Auth"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="500">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Image/photo.jpg">
            </ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Авторизация" Width="270" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <TextBox Grid.Row="1" Style="{StaticResource Auth}" Background="White"  Width="200" Height="30" Margin="150,79,150,19" />
        <TextBox Grid.Row="1" Style="{StaticResource Auth}" Background="White"  Width="200" Height="30" Margin="150,10,150,88"/>
    </Grid>
</Window>
