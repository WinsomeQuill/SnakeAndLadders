<Window x:Class="SnakesAndLadders.DevWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakesAndLadders"
        mc:Ignorable="d"
        Title="DevWindow" Height="450" Width="450" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="263*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="30*"/>
            <RowDefinition Height="187*"/>
        </Grid.RowDefinitions>
        
        <TextBox x:Name="TextBoxDevSetCage"
                 Grid.Row="0"
                 Grid.Column="0"
                 Margin="10"/>
        
        <Button x:Name="ButtonDevSetCage"
                Grid.Column="1"
                Margin="10"
                Content="Set pos"
                Click="ButtonDevSetCage_Click"/>

        <Button x:Name="ButtonDevDice"
                Grid.Column="1"
                Grid.Row="1"
                Margin="10"
                Content="Dice test" Click="ButtonDevDice_Click"/>
    </Grid>
</Window>
